   "source": [
    "## function opens ITS_LIVE data as numpy array with max-velocity filtering \n",
    "def open_itslive(path, max_velocity):\n",
    "    data = pd.read_csv(path)\n",
    "    row, col = data.shape \n",
    "    \n",
    "    velocity_arr = np.empty((row,6), dtype='float64')\n",
    "    \n",
    "    for i in range(row):\n",
    "        date = data['mid_date']\n",
    "        v = data['v [m/yr]']\n",
    "        error = data['v_error [m/yr]']\n",
    "        dt = data['date_dt [days]']\n",
    "        y = date[i]\n",
    "        velocity_arr[i,0]=y[0:4]\n",
    "        velocity_arr[i,1]=y[5:7]\n",
    "        velocity_arr[i,2]=y[8:10]\n",
    "        velocity_arr[i,3]=v[i]\n",
    "        velocity_arr[i,4]=error[i]\n",
    "        velocity_arr[i,5]=dt[i]\n",
    "        \n",
    "    filtered_v = np.copy(velocity_arr)\n",
    "    for i in range(len(filtered_v)):\n",
    "        value = filtered_v[i,3]\n",
    "        if value > max_velocity:\n",
    "            filtered_v[i,3]=np.nan\n",
    "            \n",
    "    filtered_v2 = np.copy(filtered_v)\n",
    "    for i in range(len(filtered_v)):\n",
    "        dt = filtered_v2[i,5]\n",
    "        if dt < 50:\n",
    "            filtered_v2[i,3] = np.nan\n",
    "            \n",
    "    velocity_arr = np.copy(filtered_v2)\n",
    "    \n",
    "    return velocity_arr"
   ]
