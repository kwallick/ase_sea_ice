    "## function that calculates monthly velocity for all data points at the shelf position\n",
    "def get_box_avg(arr1, arr2, arr3, arr4, arr5):\n",
    "    row, col = arr1.shape\n",
    "    box_v = np.stack((arr1[0,:], arr2[0,:], arr3[0,:], arr4[0,:], arr5[0,:]), axis=0)\n",
    "    box_err = np.stack((arr1[1,:], arr2[1,:], arr3[1,:], arr4[1,:], arr5[1,:]), axis=0)\n",
    "    \n",
    "    box_avgs = []\n",
    "    box_errors = []\n",
    "    for i in range(col):\n",
    "        avg = np.nanmean(box_v[:,i])\n",
    "        box_avgs = np.append(box_avgs, avg)\n",
    "        sd = np.nanstd(box_v[:,i])\n",
    "        error = np.divide(sd, np.sqrt(5))\n",
    "        #sd = np.nanstd(box_v[:,i])\n",
    "        #squares = np.square(box_err[:,i])\n",
    "        #error = np.sqrt(np.sum(squares))\n",
    "        #squares = np.square(box_err[:,i])\n",
    "        #squares = np.square(np.nanstd(box_v[:,i]))\n",
    "        box_errors = np.append(box_errors, error)\n",
    "    \n",
    "    monthly_box_v_arr = np.empty((col,2), dtype='float64')\n",
    "    for i in range(col):\n",
    "        monthly_box_v_arr[i,0] = box_avgs[i]\n",
    "        monthly_box_v_arr[i,1] = box_errors[i]\n",
    "        #monthly_box_v_arr[i,2] = arr1[2,i]\n",
    "        #monthly_box_v_arr[i,3] = arr1[3,i]\n",
    "\n",
    "    return monthly_box_v_arr"
   ]
