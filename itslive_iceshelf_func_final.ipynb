    "## function that finds monthly averages for each data point\n",
    "def get_monthly_averages(velocity_arr):\n",
    "    avgs = []\n",
    "    err = []\n",
    "    labels = [] \n",
    "    \n",
    "    for j in range(2014, 2023):\n",
    "        for i in range(1,13):\n",
    "            idx = np.argwhere((velocity_arr[:,1]==i)&(velocity_arr[:,0]==j))\n",
    "            avg = np.nanmean(velocity_arr[idx,3])\n",
    "            avgs = np.append(avgs, avg)\n",
    "            squares = np.square(velocity_arr[idx,4])\n",
    "            error = np.sqrt(np.sum(squares))\n",
    "            err = np.append(err, error)\n",
    "            year = int(j)\n",
    "            month = int(i)\n",
    "            label = str(month) + '-' + str(year)\n",
    "            labels = np.append(labels, label)\n",
    "            \n",
    "    avgs = avgs[:96] # range from 01/2014 to 12/2021\n",
    "    labels = labels[:96]\n",
    "    \n",
    "    col = len(avgs)\n",
    "    monthly_velocity_arr = np.empty((2,col), dtype='float64')\n",
    "    for i in range(col):\n",
    "        monthly_velocity_arr[0,i]=avgs[i]\n",
    "        monthly_velocity_arr[1,i]=err[i]\n",
    "    \n",
    "    return monthly_velocity_arr"
   ]
